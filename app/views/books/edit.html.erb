<!DOCTYPE html>
<html>
<head>
	<title></title>
	<%= stylesheet_link_tag "edit" %>
</head>
<body>
<h1>Editing Book</h1>

<% if @book.errors.any?  %>
	<p>error</p>
    <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
<% end %>

<%= form_for(@book) do |f| %>
<p>Title</p>
<%= f.text_field :title  %>

<p>Body</p>
<%= f.text_area :body  %>

<%= f.submit "Update Book" %>
<% end %>

<%= link_to "show",book_path(@book.id) %>
<%= link_to "back",books_path %>




</body>
</html>
