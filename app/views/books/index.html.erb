<!DOCTYPE html>
<html>
<head>
    <title></title>
    <%= stylesheet_link_tag "index" %>
</head>

<body>
<% if flash[:notice] %>
	<p><%= flash[:notice]  %></p>
<% end %>	
<h1>Books</h1>
<table>
	<tr>
		<th>Title</th>
		<th>Body</th>
		<th colspan = "3"></th>
	</tr>
<% @books.each do |book| %>
    <tr>
    	<td><%= book.title  %></td>
    	<td><%= book.body  %></td>
    	<td><%= link_to "Show",book_path(book.id) %></td>
    	<td><%= link_to "Edit",edit_book_path(book.id) %></td>
    	<td><%= link_to "Destroy",book_path(book.id), method: :delete,"data-confirm" => "本当に削除しますか？" %></td>
    </tr>
<% end %>
</table>

<% if @book.errors.any?  %>
    <p>error</p>  
    <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
<% end %>

<%= form_for(@book) do |f| %>


<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>

<%= f.text_area :body  %>

<%= f.submit "Create Book"  %>

<% end %>
</body>
</html>